[Unit]
Description=Aegis-DB NexusScribe Node
After=network.target

[Service]
Type=simple
User=devops
WorkingDirectory=/opt/NexusScribe
ExecStart=/opt/Aegis-DB/target/release/aegis-server --port 9091 --node-name NexusScribe --peers 127.0.0.1:9090,127.0.0.1:7001 --data-dir /opt/NexusScribe/data/aegis-db
Restart=always
RestartSec=5
Environment=RUST_LOG=info

[Install]
WantedBy=multi-user.target
